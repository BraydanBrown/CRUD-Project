<%- include('../partials/header.ejs') %>
<%- include('../partials/main_nav.ejs') %>
<main>
    <div class="jumbotron jumbotron-fluid flex-shrink-0 py-5">
        <div class="container" id="dbPage">

            <form class="form" method="post" id="dbForm">
    
                <h1>Edit Assignment</h1>
    
                <ul>

                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Course Name" type="text" name="course" id="courseTextField" value="<%= assignment.course%>" required>
                            <label class="visually-hidden" for="courseTextField">Course Name</label>
                        </li>
                    </div>

                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Assignment Title" type="text" name="title" id="titleTextField" value="<%= assignment.title%>" required>
                            <label class="visually-hidden" for="titleTextField">Assignment Title</label>
                        </li>
                    </div>
    
                    <div class="form-group">
                        <li>
                            <textarea class="form-control" placeholder="Description" type="text" name="description" id="descriptionTextField" required><%= assignment.description%></textarea>
                            <label class="visually-hidden" for="descriptionTextField">Assignment Description</label>
                        </li>
                    </div>
    
                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Weight" type="number" min="0" max="100" name="weight" id="weightTextField" value="<%= assignment.weight%>" required>
                            <label class="visually-hidden" for="weightTextField">Assignment Weight</label>
                        </li>
                    </div>
                        
                     
                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Due Date" type="date" name="due" id="dueTextField" value="<%= assignment.due%>" required>
                            <label class="visually-hidden" for="dueTextField">Assignment Due Date</label>
                        </li>
                    </div>


                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i>Submit
                    </button>
                
                    <a href="/assignment-list" class="btn btn-danger">
                        <i class="fas fa-undo"></i>Cancel
                    </a>

                </ul>

            </form>

        </div>
    </div>

</main>

<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>