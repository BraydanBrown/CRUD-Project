<main class="container">

    <!-- Message Area -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%- message %>
        </div>
    <% } %>

    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Register</h1>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username" class="form-control"></label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter Username" required autofocus>
                </fieldset>
                <fieldset class="form-group">
                    <label for="password" class="form-control"></label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
                </fieldset>
                <!-- email fieldset -->
                <fieldset class="form-group">
                    <label for="email" class="form-control"></label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email Address" required>
                </fieldset>
                <!-- display name fieldset -->
                <fieldset class="form-group">
                    <label for="displayName" class="form-control"></label>
                    <input type="text" class="form-control" id="displayName" name="displayName" placeholder="Enter Display Name" required>
                </fieldset>
                <fieldset class="form-group">
                    <input type="submit" class="btn btn-primary" value="Register">Login</input>
                    <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>
            </form>
        </div>
    </div>

</main>

