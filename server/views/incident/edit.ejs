<%- include('../partials/header.ejs') %>
<%- include('../partials/main_nav.ejs') %>
<main>
    <div class="jumbotron jumbotron-fluid flex-shrink-0 py-5">
        <div class="container" id="dbPage">

            <form class="form" method="post" id="dbForm">
    
                <h1>Edit Incident</h1><br>
                
                <div class="form-group">
                    <li>
                        <label for="customerTextField">Customer Name</label>
                        <input class="form-control" placeholder="Customer Name" type="text" name="customer" id="customerTextField" value="<%= incidentData.customer%>" required>
                    </li>
                </div>
                
                <div class="form-group">
                    <li>
                        <label for="dateTextField">Date of Incident</label>
                        <input class="form-control" placeholder="Date of Incident" type="date" name="date" id="dateTextField" value="<%= incidentData.date%>" required>
                    </li>
                </div>
                
                <div class="form-group">
                    <li>
                        <label for="timeTextField">Time of Incident</label>
                        <input class="form-control" placeholder="Time of Incident" type="time" name="time" id="timeTextField" value="<%= incidentData.time%>" required>
                    </li>
                </div>
                
                <div class="form-group">
                    <li>
                        <label for="locationTextField">Location of Incident</label>
                        <input class="form-control" placeholder="Incident Location" type="text" name="location" id="locationTextField" value="<%= incidentData.location%>" required>
                    </li>
                </div>
    
                <div class="form-group">
                    <li>
                        <label for="reporterTextField">Reported By</label>
                        <input class="form-control" placeholder="Name of Reporter" type="text" name="reporter" id="reporterTextField" value="<%= incidentData.reporter%>" required>
                    </li>
                </div>
                
                <div class="form-group">
                    <li>
                        <label for="descriptionTextField">Incident Description</label>
                        <textarea class="form-control" placeholder="Description" type="text" name="description" id="descriptionTextField" required><%= incidentData.description%></textarea>
                </div>
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit
                </button>
            
                <a href="/incident-list" class="btn btn-danger">
                    <i class="fas fa-undo"></i>Cancel
                </a>
                
            </form>
    
        </div>
    </div>
    
</main>


<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>