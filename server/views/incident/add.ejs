<%- include('../partials/header.ejs') %>
<%- include('../partials/main_nav.ejs') %>
<main>
    <div class="jumbotron jumbotron-fluid flex-shrink-0 py-5">
        <div class="container">

            <form class="form" method="post" >
    
                <h1>Insert Incident</h1>
    
                <ul>

                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Customer Name" type="text" name="customer" id="courseTextField" required>
                            <label class="visually-hidden" for="courseTextField">Customer Name</label>
                        </li>
                    </div>

                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="incident Title" type="text" name="title" id="titleTextField" required>
                            <label class="visually-hidden" for="titleTextField">incident Title</label>
                        </li>
                    </div>
    
                    <div class="form-group">
                        <li>
                            <textarea class="form-control" placeholder="Description" type="text" name="description" id="descriptionTextField" required></textarea>
                            <label class="visually-hidden" for="descriptionTextField">incident Description</label>
                        </li>
                    </div>
                    
                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Time of Incident" type="number" min="0" max="100" name="time" id="weightTextField" required>
                            <label class="visually-hidden" for="weightTextField">Time of Incident</label>
                        </li>
                    </div>

                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Due Date" type="date" name="due" id="location" required>
                            <label class="visually-hidden" for="dueTextField">Location of Incident</label>
                        </li>
                    </div>

                    <div class="form-group">
                        <li>
                            <textarea class="form-control" placeholder="Incident Description" type="text" name="description" id="descriptionTextField" required></textarea>
                            <label class="visually-hidden" for="descriptionTextField">Incident Description</label>
                        </li>
                    </div>

                    <div class="form-group">
                        <li>
                            <input class="form-control" placeholder="Reported By" type="date" name="reportedBy" id="dueTextField" required>
                            <label class="visually-hidden" for="dueTextField">Reported By</label>
                        </li>
                    </div>

                    

                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i>Submit
                    </button>
                
                    <a href="/incident-list" class="btn btn-danger">
                        <i class="fas fa-undo"></i>Cancel
                    </a>

                </ul>
    
            </form>
    
        </div>
    </div>
    
</main>


<%- include ('../partials/bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>